{
  "properties": [
    {
      "name": "scanner.dry-run",
      "type": "java.lang.Boolean",
      "description": "If true, skip sending emails and only log results.",
      "defaultValue": false
    },
    {
      "name": "scanner.metrics-wait-seconds",
      "type": "java.lang.Integer",
      "description": "Wait time after scan to allow metrics scraping.",
      "defaultValue": 0
    },
    {
      "name": "scanner.email.to",
      "type": "java.lang.String",
      "description": "Recipient email address for job digests."
    },
    {
      "name": "app.ai.enabled",
      "type": "java.lang.Boolean",
      "description": "Enable AI-powered job enhancement.",
      "defaultValue": false
    },
    {
      "name": "app.ai.provider",
      "type": "java.lang.String",
      "description": "AI provider to use (openrouter).",
      "defaultValue": "openrouter"
    },
    {
      "name": "app.ai.openrouter.api-key",
      "type": "java.lang.String",
      "description": "OpenRouter API Key."
    },
    {
      "name": "app.ai.openrouter.model",
      "type": "java.lang.String",
      "description": "OpenRouter model to use (e.g., google/gemini-2.0-flash-001).",
      "defaultValue": "deepseek/deepseek-chat"
    },
    {
      "name": "app.ai.openrouter.base-url",
      "type": "java.lang.String",
      "description": "OpenRouter API base URL.",
      "defaultValue": "https://openrouter.ai/api/v1"
    }
  ]
}