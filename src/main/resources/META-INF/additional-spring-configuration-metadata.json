{
  "properties": [
    {
      "name": "scanner.dry-run",
      "type": "java.lang.Boolean",
      "description": "If true, skip sending emails and only log results.",
      "defaultValue": false
    },
    {
      "name": "scanner.metrics-wait-seconds",
      "type": "java.lang.Integer",
      "description": "Wait time after scan to allow metrics scraping.",
      "defaultValue": 0
    },
    {
      "name": "scanner.email.to",
      "type": "java.lang.String",
      "description": "Recipient email address for job digests."
    },
    {
      "name": "app.ai.enabled",
      "type": "java.lang.Boolean",
      "description": "Enable AI-powered job enhancement.",
      "defaultValue": false
    },
    {
      "name": "app.ai.gemini.api-key",
      "type": "java.lang.String",
      "description": "Google AI Studio API Key."
    },
    {
      "name": "app.ai.gemini.model",
      "type": "java.lang.String",
      "description": "Gemini model to use.",
      "defaultValue": "gemini-1.5-flash"
    },
    {
      "name": "app.ai.gemini.base-url",
      "type": "java.lang.String",
      "description": "Gemini API base URL.",
      "defaultValue": "https://generativelanguage.googleapis.com"
    },
    {
      "name": "app.ai.gemini.path",
      "type": "java.lang.String",
      "description": "Gemini API generation path.",
      "defaultValue": "/v1beta/models/%s:generateContent"
    },
    {
      "name": "app.ai.provider",
      "type": "java.lang.String",
      "description": "AI provider to use (gemini or groq).",
      "defaultValue": "gemini"
    },
    {
      "name": "app.ai.max-jobs",
      "type": "java.lang.Integer",
      "description": "Maximum number of jobs to process via AI.",
      "defaultValue": 20
    },
    {
      "name": "app.ai.groq.api-key",
      "type": "java.lang.String",
      "description": "Groq Cloud API Key."
    },
    {
      "name": "app.ai.groq.model",
      "type": "java.lang.String",
      "description": "Groq model to use.",
      "defaultValue": "llama-3.3-70b-versatile"
    },
    {
      "name": "app.ai.groq.base-url",
      "type": "java.lang.String",
      "description": "Groq API base URL.",
      "defaultValue": "https://api.groq.com/openai/v1"
    },
    {
      "name": "app.ai.groq.chat-path",
      "type": "java.lang.String",
      "description": "Groq API chat completions path.",
      "defaultValue": "/chat/completions"
    }
  ]
}